rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the administrator
    function isAdmin() {
      // WARNING: Use your specific admin email
      return request.auth.token.email == 'aapsantos07@gmail.com'; 
    }

    // --- Custom Rules for the 'clients' collection ---
    match /clients/{clientId} {

      // 1. Allow Admin Full Access
      allow read, write: if isAdmin();

      // 2. Allow Client Read/Update Access ONLY to their own document
      allow read: if request.auth.uid == clientId;

      // Allow client to update ONLY name/notifications fields
      allow update: if request.auth.uid == clientId 
                        && request.resource.data.keys().hasOnly(['name', 'notifications']);

      // 3. Deny creation and deletion by regular users
      allow create, delete: if false; 
    }

    // Global Rule: Deny all other read/write access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
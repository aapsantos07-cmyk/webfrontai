rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Master Admin: Hardcoded Email Check
    function isMasterAdmin() {
      return request.auth.token.email == 'aapsantos07@gmail.com';
    }

    // 2. DB Admin: Dynamic Role Check from Database
    function isDbAdmin() {
      return get(/databases/$(database)/documents/clients/$(request.auth.uid)).data.role == 'admin';
    }

    // --- ADMIN SETTINGS COLLECTION ---
    
    // SECURITY FIX: Removed "allow read: if true". 
    // Now ONLY admins can read/write settings.
    match /admin/ai_settings {
      allow read, write: if isMasterAdmin() || isDbAdmin();
    }

    // 2. All Other Admin Docs: Strictly for Admins.
    match /admin/{document=**} {
      allow read, write: if isMasterAdmin() || isDbAdmin();
    }

    // --- CLIENTS COLLECTION ---
    match /clients/{clientId} {
      
      // --- READ PERMISSIONS ---
      allow read: if isMasterAdmin() || isDbAdmin() || request.auth.uid == clientId;

      // --- WRITE PERMISSIONS ---

      // 1. Master Admin (You): Can do ANYTHING.
      allow write: if isMasterAdmin();

      // 2. DB Admins (Friends): Can write/delete, BUT NOT to your specific document.
      allow write: if isDbAdmin() 
                   && (resource == null || resource.data.email != 'aapsantos07@gmail.com');

      // 3. Regular Clients: Can create their own doc (Sign Up)
      allow create: if request.auth.uid == clientId;

      // 4. Regular Clients: Update specific fields
      allow update: if request.auth.uid == clientId 
                    && request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['name', 'notifications', 'clientUploads', 'project', 'activity', 'messages']);
    }

    // --- PAGESPEED TESTS COLLECTION ---
    // Public read for shareable links, only Cloud Functions can write
    match /pagespeed_tests/{testId} {
      allow read: if true; // Public shareable links
      allow write: if false; // Only Cloud Functions
    }

    // --- PAGESPEED CACHE COLLECTION ---
    // Only Cloud Functions can read/write
    match /pagespeed_cache/{cacheKey} {
      allow read, write: if false;
    }

    // --- LEADS COLLECTION ---
    // Only admins can read, only Cloud Functions can write
    match /leads/{leadId} {
      allow read: if isMasterAdmin() || isDbAdmin();
      allow write: if false; // Only Cloud Functions
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
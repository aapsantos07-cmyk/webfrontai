rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the administrator
    function isAdmin() {
      return request.auth.token.email == 'aapsantos07@gmail.com';
    }

    // --- Custom Rules for the 'clients' collection ---
    match /clients/{clientId} {

      // 1. Allow Admin Full Access
      allow read, write: if isAdmin();

      // 2. Allow Client Read Access to their own document
      allow read: if request.auth.uid == clientId;

      // 3. Allow Client to CREATE their own document (Required for Sign Up)
      allow create: if request.auth.uid == clientId;

      // 4. Allow client to update ONLY specific fields
      allow update: if request.auth.uid == clientId 
                        && request.resource.data.keys().hasOnly(['name', 'notifications']);

      // 5. Deny deletion by regular users
      allow delete: if false;
    }

    // Global Rule: Deny all other read/write access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
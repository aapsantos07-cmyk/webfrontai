rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Identify Master Admin via Email (Secure)
    function isMasterAdmin() {
      return request.auth.token.email == 'aapsantos07@gmail.com';
    }

    // 2. Identify Admin via Database Role
    function isDbAdmin() {
      return get(/databases/$(database)/documents/clients/$(request.auth.uid)).data.role == 'admin';
    }

    // Combined Admin Check
    function isAdmin() {
      return isMasterAdmin() || isDbAdmin();
    }

    match /clients/{clientId} {
      // Allow Admins to Read/Write EVERYTHING (Fixes "Can't see users")
      allow read, write: if isAdmin();

      // Regular Users can only access their own doc
      allow read, create: if request.auth.uid == clientId;
      
      // Regular Users can update limited fields
      allow update: if request.auth.uid == clientId 
                    && request.resource.data.keys().hasOnly(['name', 'notifications']);
    }
    
    // Default block
    match /{document=**} {
      allow read, write: if false;
    }
  }
}